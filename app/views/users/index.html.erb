<div class="jumbotron bg-dark mx-3 my-1">
  <h1 class="display-3 text-ps" style="text-align: center;">Users</h1>
</div>

<div class="container-fluid mb-1">
  <div class="d-flex justify-content-center">
    <h2 class="dislay-2" style="text-align:center">Search Users</h2>
  </div>

  <div class="d-flex justify-content-center">
    <%= form_tag(users_path, method: :get) do %>
      <%= text_field_tag :userSearch, params[:userSearch] %>
      <%= submit_tag 'Search', class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "Clear Search", users_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="nice_pagination">
  <div class="page_info">
    <%= page_entries_info @users %>
  </div>
  <%= will_paginate @users, :container => false %>
</div>

<br>

<% if @users.length > 0 %>
  <div class="row justify-content-center">
    <div class="col-auto">
      <table class="table table-striped table-hover table-responsive">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Admin</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>

              <tr>
                <td><a style="color:black; text-decoration: none; background-color: none;"
                  href=<%= "/users/#{user.id}"%>><%= user.name %></a></td>
                <td><a style="color:black; text-decoration: none; background-color: none;"
                  href=<%= "/users/#{user.id}"%>><%= user.email %></a></td>
                <td><a style="color:black; text-decoration: none; background-color: none;"
                       href=<%= "/users/#{user.id}"%>><%= user.admin %></a></td>
              </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <h2 style="text-align: center;">Looks like theres nothing to see here!</h2>
    </div>
    <div class="col"></div>
  </div>
<% end %>

<br>

<div class="nice_pagination">
  <div class="page_info">
    <%= page_entries_info @users %>
  </div>
  <%= will_paginate @users, :container => false %>
</div>
<%= link_to "Back", :back, class: "btn btn-primary", style:"margin: 10px 0px 10px 10px" %>