<div class="container" style="border: 0px;">
  <div class="row text-white">
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4 w-auto">
      <div class="jumbotron bg-dark w-auto">
        <div class="px-2">
          <%= form_with(model: seller, local: true) do |form| %>
            <% if seller.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(seller.errors.count, "error") %> prohibited this seller from being saved:</h2>

                <ul>
                <% seller.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.text_field :name, placeholder: "NAME" %>
            </div>

            <div class="form-group">
              <%= form.text_field :longitude, placeholder: "LOCATION LONGITUDE" %>
            </div>

            <div class="form-group">
              <%= form.text_field :latitude, placeholder: "LOCATION LATITUDE" %>
            </div>

            <div class="form-group">
              <%= form.text_field :address, placeholder: "ADDRESS" %>
            </div>

            <div class="form-group">
              <%= form.password_field :password, placeholder: "PASSWORD" %>
            </div>

            <div class="form-group">
              <%= form.password_field :password_confirmation, placeholder: "CONFIRM PASSWORD" %>
            </div>

            <div class="actions">
              <%= form.submit "Create Account", class: "btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>