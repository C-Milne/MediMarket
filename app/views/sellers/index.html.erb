<div class="jumbotron bg-dark mx-3 my-1">
  <h1 class="display-3 text-ps" style="text-align: center;">Sellers</h1>
</div>

<div class="container-fluid">
  <div class="d-flex justify-content-center">
    <h2 class="dislay-2" style="text-align:center">Search Sellers</h2>
  </div>

  <div class="d-flex justify-content-center">
    <%= form_tag(sellers_path, method: :get) do %>
      <%= text_field_tag :searchName, params[:searchName] %>
      <%= submit_tag 'Search', class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center my-2">
    <%= link_to "Clear Search", sellers_path, class: "btn btn-primary" %>
  </div>
</div>

<% if @sellers.length > 0 %>
  <%# pagination design from https://mislav.github.io/will_paginate/ %>
  <div class="nice_pagination">
    <div class="page_info">
      <%= page_entries_info @sellers %>
    </div>
    <%= will_paginate @sellers, :container => false %>
  </div>


  <div class="container-fluid">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-10">
        <div class="row">
          <% @sellers.each do |seller| %>
            <a style="color:black; text-decoration: none; background-color: none;" href= <%= "/sellers/#{seller.id}" %>>
              <div class="card mx-2 my-2" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= "#{seller.name}" %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= "#{seller.address}" %></h6>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
      <div class="col-1"></div>
      </div>
  </div>

  <%# pagination design from https://mislav.github.io/will_paginate/ %>
  <div class="nice_pagination">
    <div class="page_info">
      <%= page_entries_info @sellers %>
    </div>
    <%= will_paginate @sellers, :container => false %>
  </div>

<% else %>
  <hr class="featurette-divider">
  <div class="container-fluid">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <h3 style="text-align: center;">Looks like theres nothing here!</h3>
      </div>
      <div class="col"></div>
    </div>
  </div>
<% end %>
